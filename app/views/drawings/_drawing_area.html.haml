.image-area
  .image-name
    - if picture_type == 'pros'
      %img{src: cover, id: 'picture-display', alt: "Cover picture", class: 'image-container', width: '500px', height: '420px'}
    - else
      %img{src: cover, id: 'picture-display', alt: "Cover picture", class: 'image-container', width: '500px'}
    %h3#picture-name
    %p(style="display:none" id="picture-id")

  #timer-button
    = form_tag("/start-draw", remote: true) do
      = hidden_field_tag :picture_type, picture_type
      = submit_tag 'Start!', class: 'btn btn-success btn-lg', id: 'start-button'

  #draw-area
    %canvas#canvas-area{width: '500px', height: '420px'}
    #clr
      %div(style="background-color:black")
      %div(style="background-color:red")
      %div(style="background-color:green")
      %div(style="background-color:orange")
      %div(style="background-color:blue")
      %div(style="background-color:purple")
      %div(style="background-color:pink")
      %div(style="background-color:yellow")
      %div(style="background-color:gray")
      %div(style="background-color:brown")
      %div(style="background-color:white")